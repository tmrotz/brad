
{
  "manifest_version": 2,

  "name": "LinkedIn Scraper",
  "description": "This extension sends profile info to Brads website",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": ":D"
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["linkedin.js"]
    }
  ],
  
  "permissions": [
    "tabs",
    "https://104.236.247.194:3000/*"
  ]
}
